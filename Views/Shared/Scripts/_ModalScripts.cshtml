<script>
    $(function(){
        $(".modal-href").click(function(){
            $(".modal-content").load($(this).data("url"));
        });
        $(".modal-close").click(function(){
            $("#modal").modal("hide");
        });
        $("#modal").on("hide.bs.modal", function(){
            $(".modal-content").html("");
        });
    });
</script>